<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme (Night). -->
    <style name="Base.Theme.DuellingWands" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>

        <!-- Couleurs plus sombres -->
        <item name="colorPrimary">@color/blueDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/grayDark</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnWarning">#9B0B0B</item>
        <item name="colorContainer">#80000000</item>

        <!-- Texte et fond sombres -->
        <item name="android:textColor">@color/white</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:windowContentTransitions">true</item>

        <item name="android:windowFullscreen">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="Theme.DuellingWands" parent="Base.Theme.DuellingWands" />

    <style name="Theme.HarryPotter.MenuStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="backgroundTint">@color/menu_background_dark</item>
        <item name="itemIconTint">@color/menu_selector_dark</item>
        <item name="itemTextColor">@color/menu_selector_dark</item>
    </style>
</resources>
